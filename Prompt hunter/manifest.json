{
  "manifest_version": 3,
  "name": "Midjourney to Notion",
  "version": "1.0",
  "description": "Save Midjourney content to a Notion page",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "options_page": "settings.html",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["/background.js"],
      "matches": ["https://api.notion.com/*"],
      "use_dynamic_url": true
    }
  ]
}
